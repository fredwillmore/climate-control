<turbo-frame
  id="artist"
>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Artist</h5>
      <h6 class="card-subtitle mb-2 text-muted">
        <%= @artist.name %>
      </h6>
      <p class="card-text">
        <%= @artist_description %>
        <% if @genres_description %>
          <br>
          <%= @genres_description %>
        <% end %>
        <% if @related_artists_description %>
          <br>
          <%= @related_artists_description %>
        <% end %>
      </p>
    </div>
  </div>
</turbo-frame>
